{
  "compilerOptions": {
    "target": "es6", // Use modern ES6
    "module": "es6",
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": false, // Disable JS unless necessary
    "skipLibCheck": true, // Skipping lib checks for faster build times
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Enforces all strict type checks
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src/**/*" // Covers all .ts, .tsx, .js, .jsx files in src folder
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "server" // If the server folder is not related to TypeScript code
  ]
}
